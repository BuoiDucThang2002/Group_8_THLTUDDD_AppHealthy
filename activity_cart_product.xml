<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".CartProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="bottom"

        android:layout_marginTop="10dp"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
             />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    android:background="@color/bgr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bgr">

        <!-- ListView for Cart Items -->
        <ListView
            android:nestedScrollingEnabled="true"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/bgr" />

        <!-- Order Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÔNG TIN HẬN HÀNG"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/ten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Nhập tên"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/fake4"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/sdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Nhập số ĐT"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/fake5"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/diachi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Nhập địa chỉ"
                android:textColorHint="@color/gray"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/fake6"
                android:drawablePadding="10dp"
                />

            <EditText
                android:id="@+id/tinh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Tỉnh / Thành phố"
                android:textColorHint="@color/gray"

                android:paddingLeft="10dp"/>

            <!-- Two spinners in a row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">

                <EditText

                    android:paddingLeft="10dp"
                    android:id="@+id/quanhuyen"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp"
                    android:hint="Quận / Huyện"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edit_text_background"/>
                <EditText
                    android:paddingLeft="10dp"
                    android:id="@+id/phuongxa"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:hint="Phường / Xã"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/ghichu"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Ghi chú nếu có!"
                android:textColorHint="@color/gray"

                android:paddingLeft="10dp"/>
        </LinearLayout>

        <!-- Payment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primary"
                android:layout_marginHorizontal="20dp"/>

            <!-- Payment details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền hàng"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tienhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140000"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TỔNG TIỀN"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:layout_weight="1"/>

                <TextView

                    android:id="@+id/tongtien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="140000"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        > <!-- Căn tất cả các phần tử về bên phải -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Dathang"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_background"
            android:text="Đặt hàng"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
