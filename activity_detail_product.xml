<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".DetailProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
android:layout_marginTop="10dp"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:src="@drawable/iconback"
            android:layout_gravity="start"
            android:layout_marginRight="50dp"
            android:background="@color/primary"
            android:contentDescription="ảnh"
            />
        <TextView
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Chi tiết sản phẩm"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
            android:textStyle="bold"

            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:src="@drawable/icbuy"
            android:layout_gravity="end"
            android:layout_marginLeft="50dp"
            android:background="@color/primary"
            android:contentDescription="ảnh"

            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@color/bgr"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imageChinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/detailimg"
                android:background="@drawable/rounded_top_corners"
                />
            <ImageView
                android:id="@+id/flash"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@drawable/flash"
                android:background="@drawable/rounded_top_corners"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/tenSanpham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ba chỉ lợn rừng"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.0 "
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fake2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | 312222 đánh giá | 56789 đã mua"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/primary"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/gia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12000 đ / kg"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bgr"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic1"
                        />
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 ngày miễn phí trả hàng"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic3"
                        />
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm HolaFresh 100%"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic2"
                        />
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Miễn phí vận chuyển"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bgr"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin sản phẩm"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="180dp"
                    android:layout_height="1dp"
                    android:background="@color/primary" />
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" • Thương hiệu: "
                        android:textSize="16dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/thuonghieu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Organic"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"

                    >
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" • Loại sản phẩm: "
                        android:textSize="16dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/loaisanpham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Rau sạch"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" • Tên sản phẩm: "
                        android:textSize="16dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tenSanPham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Cải bó xôi"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/AnhPhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detailimg"
                    android:layout_marginRight="20dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"> <!-- Căn tất cả các phần tử về bên phải -->


        <ImageView
            android:id="@+id/buttondathang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fake3"
            />
    </LinearLayout>


</LinearLayout>
