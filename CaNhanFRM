package com.example.quanlybanhang;

import static android.content.Context.MODE_PRIVATE;

import android.content.Intent;
import android.content.SharedPreferences;
import android.net.Uri;
import android.os.Bundle;

import androidx.fragment.app.Fragment;

import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.LinearLayout;
import android.widget.Toast;

/**
 * A simple {@link Fragment} subclass.
 * Use the {@link CaNhanFRM#newInstance} factory method to
 * create an instance of this fragment.
 */
public class CaNhanFRM extends Fragment {

    // TODO: Rename parameter arguments, choose names that match
    // the fragment initialization parameters, e.g. ARG_ITEM_NUMBER
    private static final String ARG_PARAM1 = "param1";
    private static final String ARG_PARAM2 = "param2";

    // TODO: Rename and change types of parameters
    private String mParam1;
    private String mParam2;

    public CaNhanFRM() {
        // Required empty public constructor
    }

    /**
     * Use this factory method to create a new instance of
     * this fragment using the provided parameters.
     *
     * @param param1 Parameter 1.
     * @param param2 Parameter 2.
     * @return A new instance of fragment CaNhanFRM.
     */
    // TODO: Rename and change types and number of parameters
    public static CaNhanFRM newInstance(String param1, String param2) {
        CaNhanFRM fragment = new CaNhanFRM();
        Bundle args = new Bundle();
        args.putString(ARG_PARAM1, param1);
        args.putString(ARG_PARAM2, param2);
        fragment.setArguments(args);
        return fragment;
    }

    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        if (getArguments() != null) {//Kiểm tra xem Fragment có nhận được đối tượng Bundle (được truyền vào khi khởi tạo) hay không. Nếu có, phương thức này trả về một Bundle, ngược lại trả về null
            mParam1 = getArguments().getString(ARG_PARAM1);//lấy giá trị String từ Bundle với khóa ARG_PARAM1 và gán cho mParam1.
            mParam2 = getArguments().getString(ARG_PARAM2);//lấy giá trị String từ Bundle với khóa ARG_PARAM2 và gán cho mParam2.
        }
    }
    LinearLayout dieukhoan,lienhe,dangxuat;

    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container,
                             Bundle savedInstanceState) {
      View view= inflater.inflate(R.layout.fragment_ca_nhan_f_r_m, container, false);
      dieukhoan=view.findViewById(R.id.dieukhoan);
      lienhe=view.findViewById(R.id.lienhe);
      dangxuat=view.findViewById(R.id.dangxuat);
      dieukhoan.setOnClickListener(new View.OnClickListener() {
          @Override
          public void onClick(View v) {
              Intent intent= new Intent(getActivity(), dieukhoansudung.class);
              startActivity(intent);
          }
      });
      lienhe.setOnClickListener(new View.OnClickListener() {
          @Override
          public void onClick(View v) {
              Uri uri=Uri.parse("tel:"+"19006789");//tạo ra hotline số điện thoại
              Intent intent=new Intent(Intent.ACTION_DIAL,uri);//chuyển ra giao diện gọi điện thoại với số đã chỉ định.
              startActivity(intent);
          }
      });
      dangxuat.setOnClickListener(new View.OnClickListener() {
          @Override
          public void onClick(View v) {
              SharedPreferences sharedPreferences = getActivity().getSharedPreferences("UserPrefs", MODE_PRIVATE);
              SharedPreferences.Editor editor = sharedPreferences.edit();
              editor.clear(); // hoặc editor.remove("key") nếu bạn chỉ muốn xóa một giá trị cụ thể
              editor.apply();

              // Thông báo cho người dùng
              Toast.makeText(getActivity(), "Đăng xuất thành công", Toast.LENGTH_SHORT).show();

              // Chuyển đến màn hình đăng nhập
              Intent intent = new Intent(getActivity(), Login.class);
              intent.setFlags(Intent.FLAG_ACTIVITY_NEW_TASK | Intent.FLAG_ACTIVITY_CLEAR_TASK);
              startActivity(intent);
              getActivity().finish(); // Đóng tất cả các Activity hiện tại
          }
      });
        return view;
    }
}
