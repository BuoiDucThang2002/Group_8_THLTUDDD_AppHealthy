package com.example.quanlybanhang;

import android.content.Intent;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;

import androidx.fragment.app.Fragment;

import android.text.Editable;
import android.text.TextWatcher;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.AdapterView;
import android.widget.EditText;
import android.widget.ImageButton;
import android.widget.ImageView;
import android.widget.ListView;
import android.widget.TextView;

import com.example.quanlybanhang.database.CreateDatabase;

import java.util.ArrayList;

/**
 * A simple {@link Fragment} subclass.
 * Use the {@link AdminListProductFRM#newInstance} factory method to
 * create an instance of this fragment.
 */
public class AdminListProductFRM extends Fragment {

    // TODO: Rename parameter arguments, choose names that match
    // the fragment initialization parameters, e.g. ARG_ITEM_NUMBER
    private static final String ARG_PARAM1 = "param1";
    private static final String ARG_PARAM2 = "param2";

    // TODO: Rename and change types of parameters
    private String mParam1;
    private String mParam2;

    public AdminListProductFRM() {
        // Required empty public constructor
    }

    /**
     * Use this factory method to create a new instance of
     * this fragment using the provided parameters.
     *
     * @param param1 Parameter 1.
     * @param param2 Parameter 2.
     * @return A new instance of fragment AdminListProductFRM.
     */
    // TODO: Rename and change types and number of parameters
    public static AdminListProductFRM newInstance(String param1, String param2) {
        AdminListProductFRM fragment = new AdminListProductFRM();
        Bundle args = new Bundle();
        args.putString(ARG_PARAM1, param1);
        args.putString(ARG_PARAM2, param2);
        fragment.setArguments(args);
        return fragment;
    }

    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        if (getArguments() != null) {
            mParam1 = getArguments().getString(ARG_PARAM1);
            mParam2 = getArguments().getString(ARG_PARAM2);
        }
    }
    ListView listView;
    SQLiteDatabase database;
    ImageButton giohang;
    TextView soluongSP;
    EditText timkiem;
    ImageView emty;
    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container,
                             Bundle savedInstanceState) {
        View view=inflater.inflate(R.layout.fragment_admin_list_product_f_r_m, container, false);
        soluongSP=view.findViewById(R.id.sanpham);
        timkiem=view.findViewById(R.id.Timkiem);
        listView=view.findViewById(R.id.list);
        emty=view.findViewById(R.id.emty);
        giohang=view.findViewById(R.id.giohang);
        giohang.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                Intent intent=new Intent(getActivity(), AddProduct.class);
                startActivity(intent);
            }
        });
        CreateDatabase createDatabase= new CreateDatabase(getActivity());
        database=createDatabase.open();
        ArrayList<String> ten =new ArrayList<>();//Lưu trữ ten
        ArrayList<String> ma = new ArrayList<>();//lưu trữ mã
        ArrayList<String> danhmuc = new ArrayList<>();//lưu trữ danhmuc
        ArrayList<String> gia = new ArrayList<>();//lưu trữ gia
        ArrayList<String> anh = new ArrayList<>();//lưu trữ anh


        int dem=0;//Khởi tạo biến dem để đếm số lượng bản ghi trong kết quả truy vấn. Mặc định là 0.
        Cursor cursor=database.rawQuery("Select * from SANPHAM",null);//Thực hiện truy vấn SQL để lấy tất cả các dòng dữ liệu từ bảng SANPHAM. Kết quả của truy vấn này được lưu vào đối tượng cursor.

        if(cursor!=null&&cursor.moveToFirst())
        {
            do {
                ten.add(cursor.getString(1)); //Lấy giá trị từ cột thứ 2 (chỉ số 1) trong kết quả truy vấn (giả sử là tên sản phẩm) và thêm vào danh sách ten.
                ma.add(cursor.getString(0));//lấy giá trị cột 0 chỉ số 9
                danhmuc.add(cursor.getString(3));//lấy giá trị vột 4 chỉ số thứ 3
                gia.add(cursor.getString(4));
                anh.add(cursor.getString(6));
                dem++;
            } while (cursor.moveToNext());
        }
        soluongSP.setText("Tất cả "+dem+" sản phẩm");
        CustomAdapterAdminProduct customAdapterAdminProduct= new CustomAdapterAdminProduct(ten.toArray(new String[0]),ma.toArray(new String[0]),danhmuc.toArray(new String[0]),gia.toArray(new String[0]),anh.toArray(new String[0]),getActivity());
        listView.setAdapter(customAdapterAdminProduct);

        timkiem.addTextChangedListener(new TextWatcher() {
            @Override
            public void beforeTextChanged(CharSequence s, int start, int count, int after) {

            }

            @Override
            public void onTextChanged(CharSequence s, int start, int before, int count) {
                Search(s.toString());
            }

            @Override
            public void afterTextChanged(Editable s) {

            }
        });
        return view;

    }
    public void Search(String query)
    {
        ArrayList<String> ten =new ArrayList<>();
        ArrayList<String> ma = new ArrayList<>();
        ArrayList<String> danhmuc = new ArrayList<>();
        ArrayList<String> gia = new ArrayList<>();
        ArrayList<String> anh = new ArrayList<>();

        int dem=0;
        Cursor cursor=database.rawQuery("Select * from SANPHAM where TenSP LIKE ?",new String[]{"%"+timkiem.getText().toString()+"%"});
        if(cursor!=null&&cursor.moveToFirst())
        {
            do {
                ten.add(cursor.getString(1));
                ma.add(cursor.getString(0));
                danhmuc.add(cursor.getString(3));
                gia.add(cursor.getString(4));
                anh.add(cursor.getString(6));

                dem++;
            } while (cursor.moveToNext());
        }
        soluongSP.setText("Tất cả "+dem+" sản phẩm");
        CustomAdapterAdminProduct customAdapterAdminProduct= new CustomAdapterAdminProduct(ten.toArray(new String[0]),ma.toArray(new String[0]),danhmuc.toArray(new String[0]),gia.toArray(new String[0]),anh.toArray(new String[0]), getActivity());
        listView.setAdapter(customAdapterAdminProduct);
        if(ten.isEmpty())
        {
            emty.setVisibility(View.VISIBLE);  // Hiển thị hình ảnh trống
            listView.setVisibility(View.GONE);
        }else{
            listView.setVisibility(View.VISIBLE);  // Hiển thị hình ảnh trống
            emty.setVisibility(View.GONE);
        }
    }
