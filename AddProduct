package com.example.quanlybanhang;

import androidx.appcompat.app.AppCompatActivity;

import android.content.ContentValues;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Spinner;
import android.widget.Toast;

import com.example.quanlybanhang.database.CreateDatabase;

public class AddProduct extends AppCompatActivity {

    EditText tensp,giasp,thuonghieu;
    Spinner danhmuc;
    Button Dathang;
    SQLiteDatabase database;
    int lsp=0;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_add_product);
        tensp=findViewById(R.id.name);
        giasp=findViewById(R.id.gia);
        thuonghieu=findViewById(R.id.thuonghieu);
        danhmuc=findViewById(R.id.danhmuc);
        Dathang=findViewById(R.id.Themsanpham);
        ArrayAdapter<CharSequence> adapter = ArrayAdapter.createFromResource(
                this,
                R.array.danh_muc_options,
                android.R.layout.simple_spinner_item
        );

        adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);

        danhmuc.setAdapter(adapter);
        danhmuc.setOnItemSelectedListener(new AdapterView.OnItemSelectedListener() {
            @Override
            public void onItemSelected(AdapterView<?> parent, View view, int position, long id) {
                String selectedItem = parent.getItemAtPosition(position).toString();
                switch (selectedItem) {
                    case "Thịt bò":
                        lsp = 1;
                        break;
                    case "Thịt lợn":
                        lsp = 2;
                        break;
                    case "Gia cầm":
                        lsp = 3;
                        break;
                    case "Cá sông":
                        lsp = 4;
                        break;
                    case "Rau xanh":
                        lsp = 5;
                        break;
                    case "Củ quả":
                        lsp = 6;
                        break;
                    default:
                        lsp = 0;
                }
            }

            @Override
            public void onNothingSelected(AdapterView<?> parent) {
                lsp = 1;
            }
        });

        CreateDatabase createDatabase= new CreateDatabase(this);

        Dathang.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if(tensp.getText().toString().equals("")||giasp.getText().toString().equals("")||thuonghieu.getText().toString().equals(""))//Nếu tên sản phẩm và giá sản phẩm và thương hiệu chưa nhập đầy đủ thì thông báo
                {
                    Toast.makeText(AddProduct.this, "Hãy nhập đủ thông tin!!!", Toast.LENGTH_SHORT).show();//thông báo
                }else{
                    database=createDatabase.open();//mở csdl
                    ContentValues contentValues= new ContentValues();//thêm dữ liệu vào csdl
                    contentValues.put(CreateDatabase.TB_SANPHAM_TENSANPHAM,tensp.getText().toString());//thêm tensp vào csdl
                    contentValues.put(CreateDatabase.TB_SANPHAM_GIA,giasp.getText().toString());
                    contentValues.put(CreateDatabase.TB_SANPHAM_THUONGHIEU,thuonghieu.getText().toString());
                    contentValues.put(CreateDatabase.TB_SANPHAM_ANH,"");
                    contentValues.put(CreateDatabase.TB_SANPHAM_DANHGIA,"");
                    contentValues.put(CreateDatabase.TB_SANPHAM_LOAISANPHAM,String.valueOf(lsp));
                    long n=database.insert("SANPHAM",null,contentValues);
                    if(n!=-1)
                    {
                        Toast.makeText(AddProduct.this, "Thêm thành công", Toast.LENGTH_SHORT).show();//thong bao thêm thành công
                        tensp.setText("");
                        thuonghieu.setText("");
                        giasp.setText("");


                    }else{
                        Toast.makeText(AddProduct.this, "Thử lại sau", Toast.LENGTH_SHORT).show();
                    }
                }
            }
        });

    }
}
