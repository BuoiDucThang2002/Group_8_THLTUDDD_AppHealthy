<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgr"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corners"
        android:layout_marginBottom="10dp"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- TextView bên trái -->
            <TextView
                android:id="@+id/madon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="#DH00001"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <!-- TextView bên phải -->
            <TextView
                android:id="@+id/trangthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã hủy"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginRight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- TextView bên trái -->
            <TextView
                android:id="@+id/tonggia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="160.000 đ"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_weight="1" />

            <!-- TextView bên phải -->
            <TextView
                android:id="@+id/ngaydat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/5/2024 - 09:39"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginRight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- TextView bên trái -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/fake11"
                android:layout_marginLeft="10dp"
                />

            <!-- TextView bên phải -->
            <TextView
                android:id="@+id/khachhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàng Trung Hiếu - 0379211043"                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginRight="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!-- TextView bên trái -->
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/fake12"
                android:layout_marginLeft="10dp"
                />

            <!-- TextView bên phải -->
            <TextView
                android:id="@+id/diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đội 4 Thành Thắng, Giao Châu, Giao Thủy, Nam Định"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginRight="30dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
